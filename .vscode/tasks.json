{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "run",
            "args": ["--release"],
            "problemMatcher": [
                "$rustc",
                "$rust-panic"
            ],
            "group": "build",
            "label": "rust: cargo build"
        }
    ]
}